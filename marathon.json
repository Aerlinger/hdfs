{
  "id": "hdfs-mesos",
  "cmd": "--master $ZK_CONNECTION_STRING/mesos --zk $ZK_CONNECTION_STRING/marathon --hostname $HOSTNAME",
  "args": ["/bin/sh", "-c", "env && sleep 300"],
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "mesosphere/marathon:v0.8.0",
      "network": "HOST",
      "privileged": false
    }
  },
  "cpus": 1.5,
  "mem": 256.0,
  "env": {
    "ZK_CONNECTION_STRING": "zk://mesos-master.vagrant:2181"
  },
  "instances": 1
}
