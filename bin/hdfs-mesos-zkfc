#!/bin/bash

DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

JAVA_HOME_DIR=$(dirname $(readlink -f $(which java)))

if [ -f $JAVA_HOME_DIR/../../bin/java ];
then
  export JAVA_HOME=$JAVA_HOME_DIR/../..
elif [ -f $JAVA_HOME_DIR/../bin/java ];
then
  export JAVA_HOME=$JAVA_HOME_DIR/..
else 
  exit 1;
fi

trap "{ $DIR/mesos-killtree "$$" ; exit 0; }" EXIT

function run_zkfc() {
  while [ true ] ; do
    $DIR/hdfs zkfc
    sleep 10
  done
}

run_zkfc
